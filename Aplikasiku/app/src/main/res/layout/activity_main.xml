<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.aplikasiku.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="400px"
            android:layout_height="200px"
            android:id="@+id/ibbandung"
            android:src="@drawable/bandung"
            android:onClick="firstImageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="400px"
            android:layout_height="200px"
            android:id="@+id/ibjakarta"
            android:src="@drawable/jakarta"
            android:onClick="secondImageButton"
            android:layout_below="@+id/ibbandung"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="400px"
            android:layout_height="200px"
            android:id="@+id/klaten"
            android:src="@drawable/klaten"
            android:onClick="thirdImageButton"
            android:layout_below="@+id/ibjakarta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="500px"
            android:layout_height="200px"
            android:id="@+id/pekanbaru"
            android:src="@drawable/pekanbaru"
            android:onClick="fourImageButton"
            android:layout_below="@+id/klaten"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="400px"
            android:layout_height="200px"
            android:id="@+id/yogyakarta"
            android:src="@drawable/yogyakarta"
            android:onClick="fiveImageButton"
            android:layout_below="@+id/pekanbaru"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>
